@model IEnumerable<JobsPortalDotNet.empleo>

@{
    ViewBag.Title = "Empleos";
}

<header class="bg-color">
    <div class="container">
        <section id="jobs">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12 text-left">
                        <h2 class="tt">Empleos</h2>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tr></tr>
                        @foreach (var item in Model){
                            <tr>
                                <td>
                                    <p class="text-left">
                                        @Html.DisplayFor(modelItem => item.titulo)
                                        <br /><span>Compañia: </span> @Html.DisplayFor(modelItem => item.usuario.nombre) | <span>E-mail: </span> elcorreo-aqui@something.com
                                    </p>
                                </td>
                                <td>
                                    @Html.ActionLink("Detalle del puesto", "Details", new { id = item.id })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <nav>
                    <ul class="pagination">
                        <li class="disabled">
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </section>
    </div>
</header>